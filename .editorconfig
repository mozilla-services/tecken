# Top-most EditorConfig file ?
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style=space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

# Indentiation
[*.py]
max_line_length = 88

[*.{css,js,json,html,yml}]
indent_size = 2
